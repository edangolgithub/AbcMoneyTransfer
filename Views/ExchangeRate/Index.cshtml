@model AbcMoneyTransfer.Models.ExchangeRateViewModel

@{
    ViewData["Title"] = "Exchange Rates";
}

<div class="container my-5">
   
    <div class="row mb-4">
        <div class="col-md-12 text-center p-3">
            <h3 class="bg-info text-light  py-3 "><span class="fw-bolder">Exchange rates as of  @Model.Today</span></h3>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Flag</th>
                <th>Currency</th>
                <th>Unit</th>
                <th>Buy Rate</th>
                <th>Sell Rate</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rate in Model.Rates)
            {
                <tr class="@(rate.Iso3 == "MYR" ? "table-info" : "")">
                    <td>
                        <div class="flag flag--@(rate.Iso3.ToLower())" title="@rate.Name"></div>
                    </td>
                    <td>@rate.Name (@rate.Iso3)</td>
                    <td>@rate.Unit</td>
                    <td>@rate.Buy.ToString("F2")</td>
                    <td>@rate.Sell.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {

}
